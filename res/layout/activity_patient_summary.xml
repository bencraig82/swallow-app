<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
 	android:background="@drawable/bk_800x480"
    tools:context=".PatientSummaryActivity" >

    <LinearLayout
    	android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/patientIdText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
			android:hint="Patient ID"
            android:inputType="number" >
            
          	<requestFocus />
		</EditText>

        <EditText
            android:id="@+id/patientSummaryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Patient summary"
            android:inputType="textMultiLine" />
        
        <CheckBox
            android:id="@+id/clin_asse_1a_cb04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CheckBox" />

        <CheckBox
            android:id="@+id/clin_asse_1a_cb05"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CheckBox" />
        
        <CheckBox
            android:id="@+id/clin_asse_1a_cb07"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CheckBox" />
       
		<Button
            android:id="@+id/doneButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Button" />

	</LinearLayout>

</ScrollView>
